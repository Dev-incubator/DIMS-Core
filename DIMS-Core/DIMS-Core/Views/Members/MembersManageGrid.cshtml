@model DIMS_Core.Models.MembersGridViewModel;
@{
    ViewData["Title"] = "MembersManageGrid";
}

<h1>MembersManageGrid</h1>
<div>
    <table class="table table-bordered">
        <thread class="thead-dark">
            <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Direction</th>
                <th>Education</th>
                <th>Start</th>
                <th>Age</th>
                <th></th>
            </tr>
        </thread>
        <tbody>
            @if (Model?.vUserProfileViewModels != null)
            {
                int i = 0;
                foreach (var vUser in Model.vUserProfileViewModels)
                {
                    i++;
                    <tr>
                        <th scope="row">@i</th>
                        <td>@Html.ActionLink(vUser.FullName, "EditMember", "Members", new { UserId = vUser.UserId })</td>
                        <td>@vUser.Direction</td>
                        <td>@vUser.Education</td>
                        <td>@vUser.StartDate.ToShortDateString()</td>
                        <td>@vUser.Age</td>
                        <td>
                            <button class="btn-info">
                                Progress
                            </button>
                            <button class="btn-info">
                                Tasks
                            </button>
                            @if (User.IsInRole("Admin"))
                            {
                                <button data-id="@vUser.UserId" name="edit" class="btn-warning">
                                    Edit
                                </button>
                                <button data-id="@vUser.UserId" name="delete" class="btn-danger">
                                    Delete
                                </button>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div id="modal" class="modal fade">
<div id="dialogContent" class="modal-dialog"></div>
</div>

@section Scripts{
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $('table a').click(function (e) {
                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modal').modal('show');
                });
            });

            $('[name = edit]').click(function (e) {
                $.get('/Members/EditMember/', { UserId: this.getAttribute('data-id') }).done( function (data) {
                    $('#dialogContent').html(data);
                    $('#modal').modal('show');
                });
            });
        })
    </script>
 }
