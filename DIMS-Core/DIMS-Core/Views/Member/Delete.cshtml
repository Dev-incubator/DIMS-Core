@model MemberViewModel

@{
    ViewData["Title"] = "Delete member";
    var bottomButtons = new BottomButtonsViewModel()
    {
        Id = new IdWithName(Model.UserId, "UserId"),
        Controller = "members",
        BackAction = ViewBag.Route.BackAction,
        BackController = ViewBag.Route.BackController ??= "members"
    };
}

<h1>Delete member</h1>

<div class="details">
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayName("User id")</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UserId)</dd>
        <dt class="col-sm-2">@Html.DisplayName("Full name")</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>
        <dt class="col-sm-2">@Html.DisplayName("Education")</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Education)</dd>
        <dt class="col-sm-2">@Html.DisplayName("Start date")</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.StartDate)</dd>
    </dl>
</div>

<h3>Are you sure you want to delete this member?</h3>

@await Html.PartialAsync("_BottomDelete", bottomButtons)