@model IEnumerable<MemberViewModel>
@{
    ViewData["Title"] = "Members";
    var createRouteData = new Dictionary<string, string>
    {
        { "BackController", ViewBag.Route.Controller }
    };
}

<h1 class="float-left">Members</h1>

@if (User.IsInRole("admin"))
{
    <p class="float-lg-right btn-create">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Member" asp-all-route-data="@createRouteData">Create</a>
    </p>
}

<table class="table table-bordered table-index">
    <thead>
        <tr>
            <th class="col-id">@Html.DisplayName("#")</th>
            <th>@Html.DisplayName("Full name")</th>
            <th>@Html.DisplayNameFor(model => model.Direction)</th>
            <th>@Html.DisplayNameFor(model => model.Education)</th>
            <th class="col-short-date">@Html.DisplayName("Start")</th>
            <th>@Html.DisplayNameFor(model => model.Age)</th>
            @if (User.IsInRole("admin") || User.IsInRole("mentor"))
            {
              <th width="300px">Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model is null || !Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center">There aren't items.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Direction)</td>
                    <td>@Html.DisplayFor(modelItem => item.Education)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Age)</td>
                    <td>
                        <div class="btn-group container">
                            <div class="row">
                                <div class="col">
                                    @Html.ActionLink("Tasks", "CurrentTasks", "Task", new Route() { UserId = item.UserId }, new { @class = "btn btn-primary w-100 m-2" })
                                </div>
                                <div class="col">
                                    @Html.ActionLink("Progress", "Progress", "Member", new Route() { UserId = item.UserId }, new { @class = "btn btn-primary w-100 m-2" })
                                </div>
                            </div>
                            @if (User.IsInRole("admin"))
                            {
                                <div class="row">
                                    <div class="col">
                                        @Html.ActionLink("Edit", "Edit", "Member", new Route() { UserId = item.UserId }, new { @class = "btn btn-warning w-100 m-2" })
                                    </div>
                                    <div class="col">
                                        @Html.ActionLink("Delete", "Delete", "Member", new Route() { UserId = item.UserId }, new { @class = "btn btn-danger w-100 m-2" })
                                    </div>
                                </div>
                            }
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
