@model IEnumerable<VTaskTrackViewModel>
@{
    ViewData["Title"] = "Task tracks";
}

<h1 class="float-left">Task tracks</h1>

<p class="float-lg-right btn-create">
    <a class="btn btn-primary" asp-action="Create" asp-controller="TaskTrack">Create</a>
</p>

<table class="table table-bordered table-index">
    <thead>
        <tr>
            <th class="col-id">@Html.DisplayName("#")</th>
            <th>@Html.DisplayName("Task")</th>
            <th>@Html.DisplayName("Note")</th>
            <th class="col-short-date">@Html.DisplayName("Date")</th>
            <th width="200px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model is null || !Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">There aren't items.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(i => item.TaskTrackId)</td>
                    <td class="text-left">@Html.ActionLink(item.TaskName, "Details", "Task", new Route() { TaskId = item.TaskId, BackController = "task-tracks" })</td>
                    <td class="text-left">@Html.ActionLink(item.TrackNote, "Details", "TaskTrack", new Route() { TaskTrackId = item.TaskTrackId })</td>
                    <td>@item.TrackDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        <div class="btn-group btn-80">
                            @Html.ActionLink("Edit", "Edit", "TaskTrack", new Route() { TaskTrackId = item.TaskTrackId }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Delete", "Delete", "TaskTrack", new Route() { TaskTrackId = item.TaskTrackId }, new { @class = "btn btn-danger" })
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
