@model TaskWithMembersViewModel

@{
    ViewData["Title"] = "Delete task #" + Model.TaskId;
}

<h1>Delete Task</h1>
<h3>Are you sure you want to delete this task?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Description is null)
            {
                <div>-</div> 
            }
            else
            {
                @Html.DisplayFor(model => model.Description)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Members)
        </dt>
        <dd class="col-sm-10">
            @Html.CreateMembersSimpleList(Model.Members)
        </dd>
    </dl>

    <form asp-action="Delete" asp-controller="tasks" asp-route-id="@Model.TaskId">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>

@await Html.PartialAsync("_BackToList", new BackToListViewModel { Controller = "tasks" })