@model IEnumerable<TaskViewModel>
@{
    ViewData["Title"] = "Tasks";
    var controller = "tasks";
}

<h1 class="float-left">Tasks</h1>

<p class="float-lg-right btn-create">
    <a class="btn btn-primary" asp-action="create" asp-controller="@controller">Create</a>
</p>

<table class="table table-bordered table-index">
    <thead>
        <tr>
            <th class="col-id">@Html.DisplayName("#")</th>
            <th>@Html.DisplayName("Name")</th>
            <th class="col-short-date">@Html.DisplayName("Start date")</th>
            <th class="col-short-date">@Html.DisplayName("Deadline")</th>
            <th width="200px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model is null || !Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">There aren't items.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(i => item.TaskId)</td>
                    <td class="text-left">@Html.ActionLink(item.Name, "Details", new { id = item.TaskId })</td>
                    <td>@item.StartDate.ToString("dd.MM.yyyy")</td>
                    <td>@item.DeadlineDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        <div class="btn-group btn-80">
                            @Html.ActionLink("Edit", "Edit", new { id = item.TaskId }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.TaskId }, new { @class = "btn btn-danger" })
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
