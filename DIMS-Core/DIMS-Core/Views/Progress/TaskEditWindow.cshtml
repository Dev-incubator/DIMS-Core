@model DIMS_Core.BusinessLayer.Models.BaseModels.TaskModel;
<form asp-action="SaveChanges" asp-controller="Members" method="post">
    <div>
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Task - @Model.Name</h5>
            </div>
            <div class="modal-body">
                <div>
                    <input type="hidden" asp-for="TaskId" />
                    <label>Description</label>
                    <input type="text" value="@Model.Description" asp-for="Description" />
                </div>
                <div>
                    <label>Start date</label>
                    <input type="date" value="@Model.StartDate" asp-for="StartDate" />
                    <label>Deadline</label>
                    <input type="date" value="@Model.DeadlineDate" asp-for="DeadlineDate" />
                </div>
                <div>
                    @*<label>Members</label>
                    @Html.DropDownListFor(Model => Model.DirectionId, ViewBag.directions as SelectList)
                    @Html.ListBoxFor(m=>m.)
                    <input type="tel" value="@Model.MobilePhone" asp-for="MobilePhone" />*@
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Back to grid</button>
            </div>
        </div>
    </div>
</form>