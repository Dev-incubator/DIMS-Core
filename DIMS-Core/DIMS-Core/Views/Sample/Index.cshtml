@model IEnumerable<SampleViewModel>
@{
    ViewData["Title"] = "Sample";
}

<h1>Samples</h1>

<p class="float-lg-right">
    <a class="btn btn-primary" asp-action="Create" asp-controller="Sample">Create</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th width="300px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model is null || !Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">
                    <strong>There aren't items.</strong>
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td align="center">
                        <div class="btn-group">
                            @Html.ActionLink("Details", "Details", "Sample", new { id = item.SampleId }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Edit", "Edit", "Sample", new { id = item.SampleId }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Delete", "Delete", "Sample", new { id = item.SampleId }, new { @class = "btn btn-danger" })
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
