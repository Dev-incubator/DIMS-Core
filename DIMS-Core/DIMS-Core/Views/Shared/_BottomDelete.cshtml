@model BottomButtonsViewModel

<div class="details-controls">
    @{
        var routeData = new Dictionary<string, string>
        {
            { Model.Id.Name, Model.Id.Value.ToString() }
        };
    }
    <form asp-action="Delete" asp-controller="@Model.Controller" asp-all-route-data="@routeData">
        <input type="submit" value="Delete" class="btn btn-danger"/>
    </form>
    <a class="btn btn-secondary" asp-action="@Model.BackAction" asp-controller="@Model.BackController">Cancel</a>
</div>